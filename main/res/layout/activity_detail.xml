<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".DetailActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/bijuu_bg"
            android:layout_width="match_parent"
            android:layout_height="235dp"
            android:src="@drawable/shukaku_bg"
            android:contentDescription="@string/bijuu_jinchuriki" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/bijuu_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="195dp"
            android:src="@drawable/shukaku_one"/>

        <TextView
            android:id="@+id/bijuu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="295dp"
            android:layout_marginStart="8sp"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/bijuu_desc"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_marginTop="320dp"/>

                <Button
                    android:id="@+id/btn_fav"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="240dp"
                    android:layout_marginStart="275dp"
                    android:text="@string/favorite"
                    android:textSize="16sp"/>
        </RelativeLayout>
</ScrollView>